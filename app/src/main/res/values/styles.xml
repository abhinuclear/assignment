<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.JobFinder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_dark_blue</item>
        <item name="colorPrimaryDark">@color/primary_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/accent_dark_orange</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Default text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- No Action Bar variation of the theme -->
    <style name="Theme.JobFinder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.JobFinder.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.JobFinder.Button</item>
    </style>

    <style name="Widget.JobFinder.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Card style -->
    <style name="Widget.JobFinder.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Text appearance styles -->
    <style name="TextAppearance.JobFinder.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.JobFinder.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.JobFinder.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.JobFinder.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.JobFinder.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.JobFinder.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.JobFinder.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.JobFinder.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.JobFinder.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.JobFinder.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.JobFinder.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.JobFinder.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.JobFinder.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">10sp</item>
    </style>
</resources>